
<div class="alert alert-success mt-3" role="alert">
  <h2>Wallets</h2>
  <hr/>
  <table class="table">
    <thead>
      <tr>
        <th>Balance</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @wallets.each do |wallet| %>
        <% if wallet.user_id == current_user.id %>
        <tr>
          <td><%= tocurrency(wallet.balance) %></td>
          <td><%= wallet.user.email %></td>
          <td><%= link_to 'Show', wallet %></td>
          <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
          <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <hr/>
  <%= link_to 'Back', homes_path, class: "btn btn-light" %>
</div>
